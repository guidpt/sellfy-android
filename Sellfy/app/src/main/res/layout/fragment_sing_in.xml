<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingBottom="24dp"
    android:paddingTop="48dp"
    tools:context="com.buildone.sellfy.ui.fragment.SingInFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:text="Login com o Facebook"
            android:layout_width="match_parent"
            android:id="@+id/button"
            android:background="#3B5998"
            android:textColor="@color/white_opacity_60"
            android:layout_gravity="bottom"
            android:layout_marginBottom="36dp"
            android:layout_height="wrap_content" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColorHighlight="@color/white_opacity_60"
            android:textSize="14sp"
            app:met_baseColor="@color/white_opacity_60"
            app:met_clearButton="true"
            app:met_floatingLabelTextColor="@color/white_opacity_60"
            app:met_iconLeft="@drawable/ic_user"
            app:met_iconPadding="10dp"
            app:met_primaryColor="@color/white_opacity_60"
            app:met_textColor="@color/white_opacity_60"
            app:met_textColorHint="@color/white_opacity_60"
            android:id="@+id/txt_username" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:layout_marginTop="50dp"
            android:textColorHighlight="@color/white_opacity_60"
            android:textSize="14sp"
            app:met_baseColor="@color/white_opacity_60"
            app:met_clearButton="true"
            app:met_floatingLabelTextColor="@color/white_opacity_60"
            app:met_iconLeft="@drawable/ic_password"
            app:met_iconPadding="10dp"
            app:met_primaryColor="@color/white_opacity_60"
            app:met_textColor="@color/white_opacity_60"
            app:met_textColorHint="@color/white_opacity_60"
            android:id="@+id/txt_password" />

        <Button
            android:text="Continue"
            android:layout_width="match_parent"
            android:id="@+id/btn_continue"
            android:background="@color/colorAccent"
            android:textColor="@color/white_opacity_60"
            android:layout_gravity="bottom"
            android:layout_marginBottom="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Esqueci minha senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_gravity="bottom|center"
            android:textColor="@color/white_opacity_55" />


    </FrameLayout>

</FrameLayout>
